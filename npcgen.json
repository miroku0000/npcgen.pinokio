{
  "width": 512,
  "height": 512,
  "prompt": "",
  "steps": 16,
  "run": [
 {
  "method": "input",
  "params": {
    "type": "notify",
    "form": [{
      "type": "text",
      "key": "npcgender",
      "title": "NPC gender",
      "placeholder": "gender",
      "default": "random"
    }, {
      "type":  "text",
      "key": "npcrace",
      "title": "NPC Race",
      "placeholder": "race",
      "default": "random"
    }, 
    {
      "type":  "text",
      "key": "npcclass",
      "title": "NPC Class",
      "placeholder": "class",
      "default": "random"
    }, 
      {
      "type":  "text",
      "key": "imagesperscenario",
      "title": "Images per scenario",
      "placeholder": "4",
      "default": "4"   
    }, 
      {
      "type":  "int",
      "key": "scenarios",
      "title": "scenarios",
      "placeholder": "1",
      "default": "1"  
      },
      {
      "type":  "int",
      "key": "steps",
      "title": "steps",
      "placeholder": "16",
      "default": "16"   
    },
    {
      "type":  "int",
      "key": "width",
      "title": "width",
      "default": "512"   

    },
    {
      "type":  "int",
      "key": "height",
      "title": "height",
      "default": "512"   
    }

    ]
  }
},
{
    "method": "shell.run",
    "params": {
      "env": { "PYTORCH_MPS_HIGH_WATERMARK_RATIO": "0.0" },
      "venv": "venv",
      "path": "app",
      "message": "python generatenpc.py --npcgender {{input.npcgender}} --npcrace {{input.npcrace}} --npcclass \"{{input.npcclass}}\" --imagesperscenario {{input.imagesperscenario}} --scenarios {{input.scenarios}} --steps {{input.steps}} --width {{input.width}} --height {{input.height}}"
    }
  }]
}
